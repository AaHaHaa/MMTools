@Article{Martinez1984,
  author    = {O. E. Martinez and R. L. Fork and J. P. Gordon},
  journal   = {Opt. Lett.},
  title     = {Theory of passively mode-locked lasers including self-phase modulation and group-velocity dispersion},
  year      = {1984},
  month     = may,
  number    = {5},
  pages     = {156--158},
  volume    = {9},
  abstract  = {Closed-form analytical solutions are obtained for a passively mode-locked laser for the case in which self-phase modulation and group-velocity dispersion, in addition to the more conventional mechanisms of saturable absorption and gain, shape the laser pulses. Provided that the self-phase modulation and group-velocity dispersion are related in a manner similar to that which causes soliton formation in optical fibers, this additional pulse shaping can reduce the pulse duration below the limit otherwise set by the laser bandwidth.},
  doi       = {10.1364/OL.9.000156},
  keywords  = {Dispersion; Mode locking; Phase modulation; Phase shift; Pulse shaping; Self phase modulation},
  publisher = {Optica Publishing Group},
  url       = {https://opg.optica.org/ol/abstract.cfm?URI=ol-9-5-156},
}

@Article{Martinez1985,
  author    = {O. E. Martinez and R. L. Fork and J. P. Gordon},
  journal   = {J. Opt. Soc. Am. B},
  title     = {Theory of passively mode-locked lasers for the case of a nonlinear complex-propagation coefficient},
  year      = {1985},
  month     = {May},
  number    = {5},
  pages     = {753--760},
  volume    = {2},
  abstract  = {We examine passive mode locking, to which not only net-gain saturation but also group-velocity dispersion and self-phase modulation contribute significantly. Different sources of self-phase modulation are considered, and closed-form analytical solutions are obtained. The case of the colliding-pulse mode locking is discussed, and an ideal case is considered, in which the self-phase modulation and group-velocity dispersion are balanced so as to take maximum advantage of this additional shaping mechanism. This mechanism is shown to be similar to that which causes solitons in optical fibers; it provides additional reduction of the pulse width and significantly improves the stability against fluctuations in net gain.},
  doi       = {10.1364/JOSAB.2.000753},
  keywords  = {Femtosecond lasers; Frequency modulated lasers; Mode locking; Optical fields; Phase modulation; Self phase modulation},
  publisher = {Optica Publishing Group},
  url       = {https://opg.optica.org/josab/abstract.cfm?URI=josab-2-5-753},
}

@Article{Liu2020,
  author   = {Liu, Xingyan and Wang, Cheng and Wang, Xinliang and Lu, Xiaoming and Bai, Peile and Liu, Yanqi and Li, Yanyan and Liu, Keyang and Yu, Lianghong and Leng, Yuxin and Li, Ruxin},
  journal  = {Optics},
  title    = {{Dispersion Management in 10-PW Laser Front End}},
  year     = {2020},
  issn     = {2673-3269},
  number   = {2},
  pages    = {191--201},
  volume   = {1},
  abstract = {To improve pulse contrast in chirped pulse amplification petawatt laser systems, the regenerative amplifier is substituted with a multipass amplifier at the Shanghai Superintense Ultrafast Laser Facility (SULF). To reduce the consequent angular dispersion of the broadband spectrum, a double-grating stretcher is established in the SULF front end. A grating compressor is set up for the 10-PW front end to obtain 20-TW output. An accurate adjustment method of grating attitude (angular position) is presented, which references the direction of gravity, improving dispersion management and focusing ability of the beam. After a pulse passes the front end compressor, its duration and phase in the frequency domain are measured, and the duration can be continuously compressed to &lt;24 fs.},
  doi      = {10.3390/opt1020015},
  file     = {:Liu2020.pdf:PDF},
  url      = {https://www.mdpi.com/2673-3269/1/2/15},
}

