@Article{Heidt2009,
  author   = {Heidt, A. M.},
  journal  = {J. Light. Technol.},
  title    = {{Efficient Adaptive Step Size Method for the Simulation of Supercontinuum Generation in Optical Fibers}},
  year     = {2009},
  issn     = {0733-8724},
  month    = sep,
  number   = {18},
  pages    = {3984--3991},
  volume   = {27},
  abstract = {The use of an adaptive step size selection significantly reduces the computational effort for the numerical solution of the generalized nonlinear SchrOumldinger equation (GNLSE). The most commonly employed adaptive step size method is based on the estimation of the local error by applying step size doubling and local extrapolation. While this method works well in combination with the globally second-order split-step Fourier (SSF) integration scheme, it can be significantly improved when the highly accurate fourth-order Runge-Kutta in the interaction picture (RK4IP) method is used for integration, which was recently introduced into the nonlinear optics field. It is demonstrated that the local error can then be estimated using a conservation quantity error (CQE) without the necessity of step size doubling. The CQE method for solving the GNLSE is explained in detail, and in addition the concept is transferred to the normal nonlinear Schrodinger equation and extended to include linear loss. The RK4IP-CQE combination proves to be the most efficient algorithm for the modeling of ultrashort pulse propagation in optical fiber, reducing the computational effort by up to ~50% relative to the local error method.},
  doi      = {10.1109/JLT.2009.2021538},
  file     = {:Heidt2009.pdf:PDF},
  groups   = {GMMNLSE},
  keywords = {Fourier analysis;integration;nonlinear equations;optical fibre losses;Runge-Kutta methods;Schrodinger equation;supercontinuum generation;adaptive step size selection method;supercontinuum generation;optical fibers;generalized nonlinear Schrodinger equation;local error estimation;local extrapolation;globally second-order split-step Fourier integration;fourth-order Runge-Kutta method;interaction picture method;nonlinear optics field;conservation quantity error;linear loss;ultrashort pulse propagation modeling;Supercontinuum generation;Optical fibers;Computational modeling;Nonlinear equations;Extrapolation;Nonlinear optics;Schrodinger equation;Optical losses;Optical pulses;Optical propagation;Nonlinear optics;optical fibers;optical propagation in nonlinear media;solitons},
}

@Article{Balac2013,
  author   = {Balac, St\'{e}phane and Mah\'{e}, Fabrice},
  journal  = {Comput. Phys. Commun.},
  title    = {Embedded {Runge-Kutta} scheme for step-size control in the interaction picture method},
  year     = {2013},
  issn     = {0010-4655},
  number   = {4},
  pages    = {1211--1219},
  volume   = {184},
  abstract = {When solving certain evolution type PDEs such as the Schr\"{o}dinger equation, the Interaction Picture method is a valuable alternative to Split-Step methods. The Interaction Picture method has good computational features when used together with the standard 4th order Runge-Kutta scheme (giving rise to the RK4-IP method). In this paper we present an embedded Runge-Kutta scheme with orders 3 and 4 with the aim to deliver an estimation of the local error for adaptive step-size control purposes in the Interaction Picture method. The corresponding ERK4(3)-IP method preserves the features of the RK4-IP method and provides a local error estimate at no significant extra cost.},
  file     = {:Balac2013.pdf:PDF},
  groups   = {GMMNLSE},
  keywords = {Interaction picture method, Embedded Runge-Kutta method, Gross-Pitaevskii equation, Generalised non-linear Schr\"{o}dinger equation, Split-step method},
  url      = {http://www.sciencedirect.com/science/article/pii/S0010465512004262},
}

